{
	"name": "@goomba/date-fns",
	"version": "0.1.0",
	"sideEffects": false,
	"description": "Custom formatting for date-fns Durations",
	"main": "lib/cjs/index.js",
	"module": "lib/esm/index.js",
	"types": "lib/esm/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/goomba/date-fns.git"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org"
	},
	"author": "Michael Yuen <iam@mikey.baby>",
	"license": "MIT",
	"private": false,
	"scripts": {
		"build": "yarn clean && tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
		"checkTypes": "tsc --noEmit -p tsconfig.cjs.json && tsc --noEmit -p tsconfig.esm.json",
		"clean": "rm -rf lib",
		"lint": "eslint .",
		"prepublishOnly": "yarn build",
		"prettier": "prettier --write .",
		"start": "ts-node app.ts",
		"test": "jest",
		"test:coverage": "jest --coverage"
	},
	"peerDependencies": {
		"date-fns": ">=2.0.0-alpha.1"
	},
	"devDependencies": {
		"@types/jest": "^26.0.15",
		"@typescript-eslint/eslint-plugin": "^4.5.0",
		"@typescript-eslint/parser": "^4.5.0",
		"date-fns": "^2.16.1",
		"eslint": "^7.11.0",
		"eslint-config-prettier": "^6.13.0",
		"husky": "^4.3.0",
		"jest": "^26.6.1",
		"lint-staged": "^10.4.2",
		"prettier": "^2.1.2",
		"ts-jest": "^26.4.3",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.3"
	},
	"files": [
		"lib"
	],
	"husky": {
		"hooks": {
			"pre-commit": "yarn checkTypes && lint-staged"
		}
	},
	"lint-staged": {
		"*.ts": [
			"eslint --fix",
			"prettier --write",
			"jest --findRelatedTests"
		],
		"*.{json,md}": "prettier --write"
	},
	"keywords": [
		"date-fns",
		"date",
		"duration-format",
		"duration",
		"format-duration",
		"javascript",
		"modules",
		"nodejs",
		"utilities",
		"utility-library",
		"utility"
	],
	"bugs": {
		"url": "https://github.com/goomba/date-fns/issues"
	},
	"homepage": "https://github.com/goomba/date-fns#readme",
	"directories": {
		"lib": "lib"
	}
}
