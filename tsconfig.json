{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"removeComments": true,
		"skipLibCheck": true,
		"strict": true
	},
	"include": ["test.ts", "src/**/*"],
	"exclude": ["src/**/*.test.(ts|tsx)", "src/**/__fixtures__"]
}
